         <MudTextField @bind-Value="Address.Name" Label="Name" Variant="MudBlazor.Variant.Outlined" Margin="Margin.Dense"></MudTextField>

        <ValidationMessage For="@(() => Address.Name)" />
    </div>
</div>

<div class="form-field">
